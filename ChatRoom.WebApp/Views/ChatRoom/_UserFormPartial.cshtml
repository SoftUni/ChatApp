@model UserFormModel

<h3 class="mb-3" style="text-align: center">@this.ViewData["Title"]: @this.Model.RoomName</h3>
<div class="row" style="justify-content: center">
	<div class="col-md-5">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">User</th>
				</tr>
			</thead>
			<tbody>
				@if (!this.Model.Users.Any())
				{
					<tr>
						<td>
							<p>No users to @this.ViewData["Type"]</p>
						</td>
					</tr>
				}
				@foreach (ChatUser user in this.Model.Users)
				{
					<tr>
						<td>
							<form method="post">
								<button class="btn btn-primary" asp-route-userId="@user.Id">@user.UserName</button>
								<input type="hidden" asp-for="Id" value="@this.Model.Id"/>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>