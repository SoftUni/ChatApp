@model IEnumerable<ChatRoomModel>
@foreach (var chatRoom in Model)
{
    <table class="task-entry">
        <tbody>
			<tr class="description">
                <th>Chat</th>
                <td>
                    <div class="description">@chatRoom.Name</div>
                </td>
            </tr>
            <tr class="actions">
                <th>Actions</th>
                <td>
                    <a asp-controller="ChatRoom" asp-action="Details" asp-route-id="@chatRoom.Id" class="btn btn-secondary mb-2">View</a>
                    <span></span>
                    @if (this.User.Identity.Name == chatRoom.Owner)
                    {
                        <a asp-controller="ChatRoom" asp-action="Edit" asp-route-id="@chatRoom.Id" class="btn btn-secondary mb-2">Edit</a>
                        <span></span>
                        <a asp-controller="ChatRoom" asp-action="Delete" asp-route-id="@chatRoom.Id" class="btn btn-secondary mb-2">Delete</a>
                    }
                </td>
            </tr>
        </tbody>
    </table>
}
